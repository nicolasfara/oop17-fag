<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.unibo.goffo.fag.ui.menu.MainMenuController">
   <FlowPane prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1">
      <children>
         <StackPane prefHeight="68.0" prefWidth="190.0">
            <children>
               <Text fx:id="menuTitle">
                  <font>
                     <Font size="50.0" />
                  </font>
               </Text>
            </children>
         </StackPane>
         <GridPane>
            <children>
                <Button fx:id="btnScores" onAction="#showScores" text="SCORES" GridPane.rowIndex="3" />
                <Button fx:id="btnStartGame" onAction="#startGame" text="START GAME" GridPane.rowIndex="2" />
                <Button fx:id="btnExit" onAction="#onExit" text="EXIT" GridPane.rowIndex="4" />
            </children>
         </GridPane>
      </children>
   </FlowPane>
</GridPane>
